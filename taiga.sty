\ProcessOptions\relax

\ifthenelse{\boolean{maths}}{
	%Drawing graphics and Graphs
	\RequirePackage{tikz, pgf, pgfplots}
	%As required
	\pgfplotsset{compat=1.15}
	%Very useful overall, mathtools supplements amsmath
	\RequirePackage{amsmath, amsthm, amssymb, amsfonts, mathtools}
	
	\theoremstyle{plain}
	% Has the additional parameter [section] that restarts the theorem counter every section
	% I.e. \begin{theorem}[The really good theorem] \end{theorem}
	\newtheorem{theorem}{Theorem}[section]
	\theoremstyle{plain}
	% Has the additional parameter [theorem] that restarts the theorem counter every theorem
	\newtheorem{corollary}{Corollary}[theorem]
	\theoremstyle{plain}
	\newtheorem{lemma}[theorem]{Lemma}
	\theoremstyle{definition}
	\newtheorem{definition}{Definition}[section]
	
	% Some nice commands
	\newcommand{\N}{\mathbb{N}}
	\newcommand{\Z}{\mathbb{Z}}
	\newcommand{\Q}{\mathbb{Q}}
	\newcommand{\R}{\mathbb{R}}
}{} 

